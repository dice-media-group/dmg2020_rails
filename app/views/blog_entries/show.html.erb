<div class="page-header">
  <%= link_to blog_entries_path, class: 'btn btn-default' do %>
    All Blog_entries
  <% end %>
  <%= link_to edit_blog_entry_path(@blog_entry), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show blog_entry</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @blog_entry.title %></dd>

  <dt>Publish at:</dt>
  <dd><%= @blog_entry.publish_at %></dd>

  <dt>User:</dt>
  <dd><%= @blog_entry.user %></dd>

</dl>
